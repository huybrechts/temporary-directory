<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

          <parent>
                <groupId>org.jenkins-ci.plugins</groupId>
                <artifactId>plugin</artifactId>
                <version>1.580.1</version>
        </parent>

    <groupId>com.agfa.jenkins.plugins</groupId>
    <artifactId>temporary-directory-plugin</artifactId>
    <packaging>hpi</packaging>
    <version>1.0</version>
    <name>temporary-directory-plugin</name>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <findbugs.failOnError>false</findbugs.failOnError>
    </properties>

	<scm>
		<connection>scm:git:git://github.com/huybrechts/temporary-directory.git</connection>
		<developerConnection>scm:git:git@github.com:huybrechts/temporary-directory.git</developerConnection>
    <tag>temporary-directory-plugin-1.0</tag>
  </scm>

    <build>
		<extensions>
			<extension>
				<groupId>org.apache.maven.wagon</groupId>
				<artifactId>wagon-ssh</artifactId>
				<version>2.4</version>
			</extension>
		</extensions>
	</build>

  <distributionManagement>
    <repository>
      <id>hap-repository</id>
      <name>HAP Maven Repository</name>
      <url>scp://maven-repository.agfahealthcare.com/maven-repository</url>
      <uniqueVersion>true</uniqueVersion>
    </repository>
  </distributionManagement>
    
</project>
